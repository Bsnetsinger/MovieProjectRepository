                    <GradientStop Color="White" Offset="0.477"/>
                </LinearGradientBrush>
            </ScrollViewer.Background>
            <VariableSizedWrapGrid HorizontalAlignment="Left" Orientation="Horizontal" Margin="54,25,54,0">

