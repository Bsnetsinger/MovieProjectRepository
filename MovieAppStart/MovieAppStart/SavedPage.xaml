                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
                <Button  HorizontalAlignment="Center" Height="268" VerticalAlignment="Center" Width="182" FontSize="48" BorderThickness="0,0,0,0" Margin="25,25,24,50">
                    <Image Source="Assets\lord of the rings_the return of the king.jpg" Stretch="Uniform" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>







            </VariableSizedWrapGrid>
        </ScrollViewer>
        <TextBlock x:Name="TopMovies" HorizontalAlignment="Left" Height="65" Margin="565,-1,0,0" Text="My Saved Movies" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" FontSize="48" FontWeight="Normal" FontStyle="Normal"/>
        <Button  Click="BackClick" HorizontalAlignment="Left" Height="56" Margin="84,7,0,0" VerticalAlignment="Top" Width="56" FontSize="36">

            <Image Source="Assets/arrow.png" HorizontalAlignment="Left" Margin="-0.4,-0.4,0,0" VerticalAlignment="Stretch"/>

        </Button>
    </Grid>
</Page>
